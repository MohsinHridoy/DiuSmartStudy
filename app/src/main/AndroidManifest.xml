<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vrstyproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".welcome.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vrstyproject"
        android:usesCleartextTraffic="true">
        <activity android:name=".question.questiondisplay.QuestionDisplayActivity"></activity>
        <activity android:name=".question.questioncategory.QuestionCategoryActivity" />
        <activity android:name=".bookread.ReadBookActivity" />
        <activity android:name=".uploadbook.UploadBookActivity" />
        <activity android:name=".home.HomeActivity" />
        <activity android:name=".register.RegisterActivity" />
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/AppTheme.Login" />
        <activity
            android:name=".welcome.WelcomeActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>